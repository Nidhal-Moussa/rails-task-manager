<h2>Our tasks for today</h2>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title , task_path(task) %>
    <% if task.completed %>
      <input type="checkbox" checked>
    <% else %>
      <input type="checkbox">
    <% end %>
   </li>
  <% end %>
</ul>
<hr>
<h3><%= link_to "add task", new_task_path %></h3>
